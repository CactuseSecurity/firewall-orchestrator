        return $"{(ConnHandler.ActConn.IsRequested ? userConfig.GetText("requested_by") : userConfig.GetText("created_by"))}: {ConnHandler.ActConn.Creator}, " +
            $"{userConfig.GetText("creation_date")}: {ConnHandler.ActConn.CreationDate}";
