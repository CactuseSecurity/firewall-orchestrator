    private void ReportTypeChanged(ChangeEventArgs args)
    {
        selectedReportType = (ReportType) Enum.Parse(typeof(ReportType), (args != null && args.Value != null ? args.Value?.ToString() : "Rules"), true);
        DisplayTime();
