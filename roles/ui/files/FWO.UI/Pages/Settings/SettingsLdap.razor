                <div class="form-group row mt-2" data-toggle="tooltip" title="@(userConfig.PureLine("H5225"))">
                    <label class="col-sm-3 col-form-label col-form-label-sm">@(userConfig.GetText("global_tenant_name")):</label>
                    <div class="col-sm-8">
