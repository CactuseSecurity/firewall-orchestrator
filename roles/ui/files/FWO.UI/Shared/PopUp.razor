@if (Show)
{
    <div class="modal-backdrop" style="background-color:rgba(0,0,0,0.5);">
        <div class="modal-open" tabindex="-1">
            <div class="modal-dialog @(Large ? "modal-lg" : "") @(Scrollable ? "modal-dialog-scrollable" : "")">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@Title</h5>
                        <button type="button" class="close" @onclick="Close">
                            <span>&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @Body
                    </div>
                    <div class="modal-footer">
                        @Footer
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code
{
    [Parameter]
    public string Title { get; set; } = "EMPTY_TITLE";

    [Parameter]
    public RenderFragment Body { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public bool Show { get; set; } = false;

    [Parameter]
    public bool Large { get; set; } = false;

    [Parameter]
    public bool Scrollable { get; set; } = true;

    [Parameter]
    public Action OnClose { get; set; } = new Action(() => { });

    private void Close()
    {
        Show = false;
        OnClose();
    }
}
