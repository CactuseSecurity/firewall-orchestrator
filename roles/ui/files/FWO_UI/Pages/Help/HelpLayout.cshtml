@using FWO.ApiConfig
@inject UserConfig userConfig

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow w-100 sticky-top">
        <a class="navbar-brand" href="/help/?lang=@($"{userConfig.GetUserLanguage()}")">
            <img src="/images/FWO_logo_navbar.png">&nbsp;@userConfig.GetText("fworch_long")
        </a>

        <div class="navbar-collapse ">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item px-2">
                    <a class="nav-link" href="/help/reporting/?lang=@($"{userConfig.GetUserLanguage()}")">
                        <span class="oi oi-spreadsheet"></span> @userConfig.GetText("reporting")
                    </a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" href="/help/scheduling/?lang=@($"{userConfig.GetUserLanguage()}")">
                        <span class="oi oi-calendar"></span> @userConfig.GetText("scheduling")
                    </a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" href="/help/archive/?lang=@($"{userConfig.GetUserLanguage()}")">
                        <span class="oi oi-box"></span> @userConfig.GetText("archive")
                    </a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" href="/help/recertification/?lang=@($"{userConfig.GetUserLanguage()}")">
                        <span class="oi oi-badge"></span> @userConfig.GetText("recertification")
                    </a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" href="/help/settings/?lang=@($"{userConfig.GetUserLanguage()}")">
                        <span class="oi oi-cog"></span> @userConfig.GetText("settings")
                    </a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" href="/help/API/?lang=@($"{userConfig.GetUserLanguage()}")">
                        <span class="oi oi-eye"></span> @userConfig.GetText("api")
                    </a>
                </li>                
            </ul>
        </div>
    </nav>
    @RenderSection("sidebar", false)
    <div style="margin-left: 270px">
        @RenderBody()
    </div>
</body>
</html>

